.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
    padding: 0 5 rpx;
}

.item {
    font-size: 2rem;
    color: #585858;
    background-color: #fff;
    width: 90%;
    line-height: 100 rpx;
    margin-bottom: 3 rpx;
    padding-left: 3 rpx;
    border-bottom: 1px solid #0f88eb;
    background: #fff;
}