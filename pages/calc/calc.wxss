.content {
    font-family: Helvetica Neue UltraLight;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ccc;
    overflow-x: hidden;
}

.layout-top {
    width: 100%;
    margin-bottom: 30 rpx;
}

.layout-bottom {
    width: 100%;
}

.screen {
    font-family: Helvetica Neue UltraLight;
    color: #0f88eb;
    text-align: right;
    width: 100%;
    line-height: 260 rpx;
    font-size: 4.25rem;
    box-sizing: border-box;
    background-color: #fff;
    padding-right: 1rem;
}

.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 5rem;
    background-color: #fff;
}

.item {
    font-family: Helvetica Neue UltraLight;
    font-size: 2rem; 
    width: 25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin: 0.25rem;
    border-radius: 50%;
}

.item:active {
    background-color: #ff0000;
}

.zero {
    width: 50%;
    margin: 0.2rem;
    border-radius: 1.50rem;
}

.operator {
    color: #fff;
    background: #f78d1d;
    background-color: #0f88eb;
}

.numbers {
    color: #0f88eb;
    background-color: #fff;
    border: 1rpx solid #0f88eb;
}

.iconBtn {
    display: flex;
}

.icon {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: center;
}